{
  "name": "quarkdown-vscode",
  "displayName": "Quarkdown (Official)",
  "description": "Quarkdown Language Support",
  "icon": "images/icon.png",
  "version": "1.0.2",
  "publisher": "Quarkdown",
  "galleryBanner": {
    "color": "#2a4f3b",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/quarkdown-labs/quarkdown-vscode"
  },
  "sponsor": {
    "url": "https://github.com/sponsors/iamgio"
  },
  "engines": {
    "vscode": "^1.100.0",
    "node": ">=18"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "quarkdown",
        "aliases": [
          "Quarkdown"
        ],
        "extensions": [
          ".qd"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "quarkdown",
        "scopeName": "text.quarkdown",
        "path": "./syntaxes/quarkdown-tm-grammar/syntaxes/quarkdown.tmLanguage"
      }
    ],
    "commands": [
      {
        "command": "quarkdown.startPreview",
        "title": "Quarkdown Live Preview",
        "icon": "$(open-preview)"
      },
      {
        "command": "quarkdown.stopPreview",
        "title": "Stop Quarkdown Live Preview"
      },
      {
        "command": "quarkdown.restartLanguageServer",
        "title": "Restart Quarkdown Language Server"
      },
      {
        "command": "quarkdown.exportPdf",
        "title": "Export Quarkdown to PDF",
        "icon": "$(file-pdf)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "quarkdown.startPreview",
          "when": "resourceExtname == .qd",
          "group": "navigation@1"
        },
        {
          "command": "quarkdown.exportPdf",
          "when": "resourceExtname == .qd",
          "group": "navigation@2"
        }
      ],
      "commandPalette": [
        {
          "command": "quarkdown.startPreview",
          "when": "resourceExtname == .qd"
        },
        {
          "command": "quarkdown.stopPreview",
          "when": "resourceExtname == .qd"
        },
        {
          "command": "quarkdown.exportPdf",
          "when": "resourceExtname == .qd"
        }
      ]
    },
    "keybindings": [
      {
        "command": "quarkdown.startPreview",
        "key": "shift+ctrl+v",
        "mac": "shift+cmd+v",
        "when": "editorLangId == quarkdown && !notebookEditorFocused"
      },
      {
        "command": "quarkdown.exportPdf",
        "key": "ctrl+alt+p",
        "mac": "cmd+alt+p",
        "when": "editorLangId == quarkdown && !notebookEditorFocused"
      }
    ],
    "configuration": [
      {
        "title": "Quarkdown",
        "properties": {
          "quarkdown.path": {
            "type": "string",
            "default": "quarkdown",
            "description": "Path to the Quarkdown executable"
          },
          "quarkdown.outputDirectory": {
            "type": "string",
            "default": "output",
            "description": "Output directory for Quarkdown artifacts, relative to the workspace root"
          }
        }
      }
    ],
    "configurationDefaults": {
      "[quarkdown]": {
        "editor.semanticHighlighting.enabled": true,
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.detectIndentation": false,
        "files.autoSaveDelay": 150,
        "editor.formatOnType": true
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build": "yarn compile && vsce package",
    "vscode:prepublish": "tsc -p ./"
  },
  "devDependencies": {
    "@types/node": "^22.15.29",
    "@types/vscode": "^1.100.0",
    "@vscode/vsce": "^3.4.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
